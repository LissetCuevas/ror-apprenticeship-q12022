<div class="text-center">
  <img src="/pokemon_logo.png" width="400"/>
  <br/>
  <% if user_signed_in? %>
    <%= link_to 'New pokemon', new_pokemon_path, class: "btn btn-success" %>
  <% end %>
</div>

<div class="row row-cols-1 row-cols-md-6 g-8 justify-content-center text-center">
  <% @pokemons.each do |pokemon| %>
    <div class="col" style="padding: 0; margin: 20px 10px 20px 10px; border: 16px solid #FFEC9E;">
      <div class="card h-100">
        <%= link_to pokemon_path(pokemon) do %>
          <img 
            src=<%= "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/#{pokemon.api_id ? pokemon.api_id : rand(1..898)}.png"%>
            class="card-img-top "
            style="background: linear-gradient(#190033, #660066)"
          />
        <% end %>
        <div class="card-body text-dark" style="background: #FFEC9E">
          <h5 class="card-title"><%= link_to pokemon.name, pokemon_path(pokemon), class: "text-dark text-decoration-none" %></h5>
          <div class="card-text">
            <% pokemon.types.map do |type| %>
              <div class="badge alert-success">
                <%= type.name %>
              </div>
            <% end %>
            <% pokemon.abilities.map do |ability| %>
              <div class="badge alert-warning">
                <%= ability.name %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
